{%- spaceless -%}
	<ul class="breadcrumb">
	{%- for key, crumb in crumbs.getTrail -%}
		{%- if key == crumbs.count -%}
			<li class="active">
				<a href="{{- crumb.url -}}" title="{{- crumb.label -}}">{{- truncDot(crumb.label, param('ccdn_component_crumb_trail.crumb.last_crumb_truncate')) -}}</a>
			</li>
		{%- else -%}
			<li>
				<a href="{{- crumb.url -}}" title="{{- crumb.label -}}">
					{%- if key == 0 -%}
						{{- truncDot(crumb.label, param('ccdn_component_crumb_trail.crumb.first_crumb_truncate')) -}}
					{%- else -%}
						{{- truncDot(crumb.label, param('ccdn_component_crumb_trail.crumb.mid_crumb_truncate')) -}}
					{%- endif -%}
				</a><span class="divider">/</span>
			</li>
		{%- endif -%}
	{%- endfor -%}
	</ul>
{%- endspaceless -%}
