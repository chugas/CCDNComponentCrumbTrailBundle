{%- spaceless -%}
	<ol class="breadcrumb">
	{%- for key, crumb in crumbs.getTrail -%}
		{%- if key == crumbs.count -%}
			<li>
				<a href="{{- crumb.url -}}" title="{{- crumb.label -}}">{{- truncDot(crumb.label, ccdn_component_crumb_trail.crumb.last_crumb_truncate) |raw -}}</a>
			</li>
		{%- else -%}
			<li>
				<a href="{{- crumb.url -}}" title="{{- crumb.label -}}">
					{%- if key == 0 -%}
						{{- truncDot(crumb.label, ccdn_component_crumb_trail.crumb.first_crumb_truncate) |raw -}}
					{%- else -%}
						{{- truncDot(crumb.label, ccdn_component_crumb_trail.crumb.mid_crumb_truncate) |raw -}}
					{%- endif -%}
				</a>
			</li>
		{%- endif -%}
	{%- endfor -%}
	</ol>
{%- endspaceless -%}
